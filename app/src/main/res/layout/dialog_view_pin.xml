<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="304dp"
    android:layout_gravity="center"
    android:padding="15dp"
    android:background="@drawable/button_edit"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_cancel_dialog_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_gravity="end"
        android:layout_marginBottom="25dp"
        android:src="@drawable/cancel_btn_icon"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Select Category"
        android:textColor="@color/orange"
        android:layout_marginBottom="12dp"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="225dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/sign_in_edittext"
        android:backgroundTint="@color/orange"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner_select_category_view_pin"
            android:layout_width="225dp"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/select_view_map"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_edit_dialog_stroke"
        android:text="Select"
        android:textColor="@color/orange"/>

</LinearLayout>